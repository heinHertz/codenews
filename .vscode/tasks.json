    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "test",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}", 
                "-lpthread",
                "-o",               
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        }
    ]
}